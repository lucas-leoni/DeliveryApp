<!DOCTYPE html>
<html lang="pt-br">
<%- include('./partials/head.ejs') %> 
<body>
    <%- include('./partials/header.ejs') %> 
    <div class="row" id="aside-main">
        <%- include('./partials/aside.ejs') %>
        <main class="col-5">
            <div class="row" id="images">
                <% produto.forEach(produto => { %>
                    <div class="card" style="width: 18rem;">
                        <img src="/img/pizza.jpg" class="card-img-top">
                        <div class="card-body">
                            <h5 class="card-title"><b><%= produto.nm_produto %></b></h5>
                            <p class="card-text"><%= produto.ds_produto %></p>
                            <p class="card-text"><b>R$ <%= produto.vl_unitario %></b></p>
                            <a href="/" class="btn btn-primary">Voltar</a>
                            <a href="/produto/<%= produto.id %>/atualizar" class="btn btn-success">Atualizar</a>
                            <a href="/deletar-produto/<%= produto.id %>" class="btn btn-danger" onclick="return confirm('VocÃª deseja excluir o produto ?');">Deletar</a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </main>
    </div>
<%- include('./partials/footer.ejs') %> 
</body>
</html>